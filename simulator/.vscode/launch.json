    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "osx": {
                "MIMode": "lldb"
            },
            "linux": {
                "MIMode": "gdb"
            },
            "type":"cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Simulator",
            "args": [
                "-house_path=/home/arels/Ex03ProgramingTopics/simulator/test/examples/failtests",
                "-algo_path=/home/arels/Ex03ProgramingTopics/simulator/oldSo"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}